<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <ui:style src="FullWidth.css"/>

    <g:ScrollPanel addStyleNames="{style.fullpagecontainer}">
        <g:FlowPanel>
            <g:FlowPanel addStyleNames="{style.titlepanel}">
                <g:Button addStyleNames="{style.titlelogoutbutton}" ui:field="logoutButton"/>
                <g:InlineLabel addStyleNames="{style.titleuserlabel}" ui:field="userInfoLabel"/>
                <g:InlineLabel addStyleNames="{style.titlepagelabel}" ui:field="titleLabel"/>
                <g:Label addStyleNames="{style.titlereset}"/>
            </g:FlowPanel>
            <g:HTML addStyleNames="{style.introhtml}" ui:field="introHtml"/>
            <g:FormPanel ui:field="uploadForm">
                <g:FlowPanel>
                    <g:FileUpload name="metadataupload" addStyleNames="{style.uploadfile}" ui:field="omeUpload"/>
                    <g:Hidden name="timestamp" ui:field="timestampToken"/>
                    <g:Hidden name="datasetids" ui:field="datasetIdsToken"/>
                    <g:Hidden name="ometoken" ui:field="omeToken"/>
                    <g:Hidden name="xmltoken" ui:field="xmlToken"/>
                </g:FlowPanel>
            </g:FormPanel>
            <g:CaptionPanel addStyleNames="{style.settingscaptionpanel}" ui:field="settingsCaption" captionText="XML scheme">
                    <g:FlowPanel addStyleNames="{style.settingsradiopanel}">
                        <g:RadioButton addStyleNames="{style.settingsradiobutton}"
                                       name="xmlSchemeRadioGroup" ui:field="omeRadio" text="CDIAC / OME XML &lt;x_tags&gt;" formValue="OME"/>
<!--                         <g:RadioButton addStyleNames="{style.settingsradiobutton}"
                                       name="xmlSchemeRadioGroup" ui:field="cdiacRadio" text="Cdiac XML &lt;metadata&gt;" formValue="CDIAC"/>  -->
                        <g:RadioButton addStyleNames="{style.settingsradiobutton}"
                                       name="xmlSchemeRadioGroup" ui:field="oadsRadio" text="OADS XML &lt;oads_metadata&gt;" formValue="OADS"/>
                    </g:FlowPanel>
            </g:CaptionPanel>
            <g:FlowPanel addStyleNames="{style.horizontalbuttonpanel}">
                <g:Button addStyleNames="{style.horizontalbutton}" ui:field="uploadButton"/>
                <g:Button addStyleNames="{style.horizontalbutton}" ui:field="cancelButton"/>
            </g:FlowPanel>
        </g:FlowPanel>
    </g:ScrollPanel>

</ui:UiBinder>
